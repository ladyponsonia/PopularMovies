<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/video_thumb_iv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="@dimen/mid_margin"
        android:contentDescription="@string/video_thumbnail"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/video_thumb_iv"
        app:layout_constraintEnd_toEndOf="@id/video_thumb_iv"
        app:layout_constraintStart_toStartOf="@id/video_thumb_iv"
        app:layout_constraintTop_toTopOf="@id/video_thumb_iv"
        app:srcCompat="@android:drawable/ic_media_play"
        android:scaleType="centerInside"
        android:contentDescription="@string/play_icon" />


</android.support.constraint.ConstraintLayout>